:ruby
  attrs = %w(uuid gear_size available_capacity max_capacity)

%section
  %h1.divide
    = @district.name
  - attrs.each do |attr|
    %div
      %span= attr.to_s.upcase + ": "
      %span= @district.send(attr)

%section
  %h2.divide Nodes
  - if @nodes.empty?
    None
  - else
    = render :partial => 'admin_console/node/tile', :collection => @nodes, :as => :node
